{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug with Nodemon",
        "runtimeExecutable": "nodemon",
        "program": "${workspaceFolder}/src/index.ts",
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "runtimeArgs": ["--loader", "ts-node/esm"]
      }
    ]
  }